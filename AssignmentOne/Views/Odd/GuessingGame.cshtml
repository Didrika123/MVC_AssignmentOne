
@{
    ViewBag.Title = "Guessinator";
}

<h1>Guess the Secret Number</h1>

<form method="post">
    <input name="guess" />
    <button>Guess</button><br />
    <label class="errortext">@ViewBag.GuessGameError</label>
</form>


@if (ViewBag.GuessGameResult != null)
{
<h2>@ViewBag.GuessGameResult @ViewBag.GuessGameNumGuesses</h2>
}