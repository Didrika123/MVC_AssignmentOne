<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
</head>
<body>
    <header>
        <nav>
            <a asp-action="Index" asp-controller="Home" class="home-link-img"></a>

            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home") </li>
                <li>@Html.ActionLink("Projects", "Projects", "Home") </li>
                <li>@Html.ActionLink("About", "About", "Home") </li>
                <li>@Html.ActionLink("Contact", "Contact", "Home") </li>
                <li>@Html.ActionLink("Fever Check", "FeverCheck", "Odd") </li>
                <li>@Html.ActionLink("Guess", "GuessingGame", "Odd") </li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>&copy; Didrika, @DateTime.Now.Year</p>
    </footer>
</body>
</html>
